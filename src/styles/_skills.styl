.skills
  font-size: 2.25em
  text-align: center
  font-family: font_mono
  font-weight: 500
  color: pastel_gray
  background-color: gunmetal
  padding: 25px 10px 10px 10px
  height: 500px
  h2
    margin-bottom: 10px
  button
    border: 2px solid pastel_gray
    padding: 4px 8px
  .fab, .fas
    font-size: 22rem
    opacity: 0.25

.skills_cards
  display: flex
  justify-content: center
  position: relative
  margin-top: 50px

.skills_card
  display: grid
  align-items: center
  grid-template-columns: auto
  grid-template-rows: 50px auto 50px
  position: absolute
  z-index: skill_card_z_index
  background-color: pastel_gray 
  color: gunmetal
  width: 275px
  height: 325px
  padding: 10px
  box-shadow: box_shadow_1

.skills_card-top
  display: flex
  justify-content: space-between
  grid-row: 1

.skills_card-bottom
  display: flex
  justify-content: space-between
  align-items: flex-end
  grid-row: 3

.skills_card-icon
  grid-row: 2
  grid-column: 1
  z-index: skill_icon_z_index

.skills_card-desc
  grid-row: 2
  grid-column: 1
  z-index: skill_description_z_index
  font-size: 0.9em
  font-weight: 500
  font-family: font_sans
