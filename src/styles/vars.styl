// FONTS
font-sans = 'Fira Sans', Helvetica, sans-serif
font-mono = 'Fira Mono', 'Lucida Console', monospace

// COLORS
mayaBlue = hsl(201, 93%, 71%) // accent (from icon)
razzmatazz = hsl(336, 85%, 53%) // accent (from icon)
gunmetal = hsl(233, 22%, 23%)
maroonFlush = hsl(340, 72%, 39%)
vBlack = hsl(0, 0%, 5%)
eerieBlack = hsl(20, 6%, 9%)
darkPuce = hsl(327, 7%, 25%)
pastelGray = hsl(330, 11%, 78%)
vWhite = hsl(0, 0%, 95%)

// BREAKPOINTS
desktop = 70em
laptop = 64em
tablet = 50em
phablet = 37.5em
phone = 28em

// MATERIAL DESIGN BOX SHADOW
box-shadow-1 = 0 1px 3px hsla(0, 0%, 0%, 0.12), 0 1px 2px hsla(0, 0%, 0%, 0.24)
box-shadow-2 = 0 3px 6px hsla(0, 0%, 0%, 0.16), 0 3px 6px hsla(0, 0%, 0%, 0.23)
box-shadow-3 = 0 10px 20px hsla(0, 0%, 0%, 0.19), 0 6px 6px hsla(0, 0%, 0%, 0.23)
box-shadow-4 = 0 14px 28px hsla(0, 0%, 0%, 0.25), 0 10px 10px hsla(0, 0%, 0%, 0.22)
box-shadow-5 = 0 19px 38px hsla(0, 0%, 0%, 0.3), 0 15px 12px hsla(0, 0%, 0%, 0.22)

// Z-INDEX
backgroundZIndex = -1000