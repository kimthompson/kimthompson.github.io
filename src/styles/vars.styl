// FONTS
font-handwriting = 'Rock Salt', Impact, 'Comic Sans', cursive
font-sans = 'Fira Sans', Helvetica, sans-serif
font-mono = 'Fira Mono', 'Lucida Console', monospace
font-paragraph = 'Lato', Helvetica, sans-serif

// COLORS
mako = #3d434c
golden-fizz = #f8f32b
gallery = #ededed
white = #fefefe
cod-gray = #111111
astronaut-blue = #003d5b

// BREAKPOINTS
desktop = 70em
laptop = 64em
tablet = 50em
phablet = 37.5em
phone = 28em

// MATERIAL DESIGN BOX SHADOW
box-shadow-1 = 0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24)
box-shadow-2 = 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23)
box-shadow-3 = 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23)
box-shadow-4 = 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22)
box-shadow-5 = 0 19px 38px rgba(0, 0, 0, 0.3), 0 15px 12px rgba(0, 0, 0, 0.22)
