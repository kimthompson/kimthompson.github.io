a 
  transition: color 0.5s ease
  color: gallery
  text-decoration: none

a:hover 
  color: golden-fizz

@media (min-width: phablet) 
  header
    background: astronaut-blue
    padding: 1em
    display: grid
    align-items: center
    box-shadow: box-shadow-2

  nav
    grid-column-start: 2
    align-self: center
    justify-self: end
    display: flex

  nav > a
    margin: 1.5em 4em 0 0
    color: gallery

  nav::last-child 
    margin: 1.5em 0 0 0
  
  nav > span 
    font-size: 1.8rem
    font-family: font-mono
    color: gallery

  nav::hover 
    color: golden-fizz
  
  svg 
    display: none

@media (max-width: phablet) 
  .siteName 
    display: flex
    justify-content: center
    background: astronaut-blue
    color: gallery
    box-shadow: box-shadow-1

  nav 
    display: flex
    justify-content: space-between
    padding: 0.75em 2em 0.5em
    align-items: center
    background-color: white
    box-shadow: box-shadow-2

  .navlink 
    display: flex
    flex-direction: column
    align-items: center
    color: cod-gray
    fill: cod-gray

  .navlink:hover 
    color: lighten(cod-gray, 50)
    fill: lighten(cod-gray, 50)

  .navlink > svg 
    margin-bottom: 0.2em
