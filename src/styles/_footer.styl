footer 
  background-color: pastel_gray
  display: flex
  flex-direction: column
  align-items: center
  .fab
    font-size: 4rem
    @media screen and (max-width: 500px)
      font-size: 2.5rem

.btn_resume
  font-size: 3em
  border-radius: 3px
  border: 2px solid gunmetal
  background-color: razzmatazz
  color: gunmetal
  padding: 2px 9px
  margin: 25px

.btn_resume:hover
  background-color: maroon_flush
  transition: all 200ms linear

.icon_buttons
  display: flex
  margin-top: 25px

.icon_button
  background-color: razzmatazz
  width: 50px
  height: 50px
  padding: 10px
  margin: 10px
  border-radius: 3px
  border: 2px solid gunmetal
  i 
    padding: 7px
    color: gunmetal
  i.fa-youtube
    padding: 5px 3px
  i.fa-medium-m, i.fa-codepen
    padding: 5px
  @media screen and (max-width: 500px)
    width: 30px
    height: 30px
    padding: 5px
    margin: 5px
    border-radius: 2px
    border: 2px solid gunmetal
    i 
      padding: 3px
    i.fa-youtube
      padding: 3px 2px
    i.fa-medium-m, i.fa-codepen
      padding: 3px
    

.icon_button:hover
  background-color: maroon_flush
  transition: all 100ms linear
